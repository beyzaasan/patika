import java.util.Scanner;

public class tek {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner scan = new Scanner(System.in);
		
		int a;
		int toplam=0;
		do{
			System.out.println("SayÄ± giriniz: ");
			a=scan.nextInt();
			if(a%2==0 || a%4==0) {
				toplam +=a;
			}
			else 
				continue;
		}while(a>0 && a%2 == 0);
		System.out.println("toplam: "+toplam);
	}

}
